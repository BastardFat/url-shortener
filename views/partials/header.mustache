<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <link rel="stylesheet" href="css/bulma.css" />
  <link rel="stylesheet" href="css/bulma-tooltip.css" />
  <link rel="stylesheet" href="css/font-awesome.css" />

  <title>{{ page.title }}</title>
</head>
  <body>

    <script src="js/jquery.js" charset="utf-8"></script>
    <script src="js/site.js" charset="utf-8"></script>

    <nav class="navbar is-transparent">
      <div class="navbar-brand">
        <a class="navbar-item" href="/">
          <img src="img/logo.svg" alt="SHORTSS">
        </a>
        <div class="navbar-burger burger" data-target="navbarExampleTransparentExample">
          <span></span>
          <span></span>
          <span></span>
        </div>
      </div>

      <div id="navbarExampleTransparentExample" class="navbar-menu">
        <div class="navbar-end">

            {{# page.anonymous }}
            <div class="navbar-item">
              You are not loged in
            </div>
            <div class="navbar-item">
              <a class="button is-primary" href="login">
                <span>Login</span>
              </a>
            </div>
            <div class="navbar-item">
              <a class="button is-primary" href="register">
                <span>Register</span>
              </a>
            </div>
            {{/ page.anonymous}}

            {{^ page.anonymous }}
            <div class="navbar-item">
              {{ page.user.email }}
            </div>
            <div class="navbar-item">
              <a class="button" href="logout">
                <span>Logout</span>
              </a>
            </div>
            {{/ page.anonymous}}

        </div>
      </div>
    </nav>

    {{# page.error}}
    <div id="general-error" class="notification is-danger">
      <button class="delete" onclick="closeGeneralError()"></button>
      {{ page.error }}
    </div>
    {{/ page.error}}
